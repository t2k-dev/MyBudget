<h6 class="pr-sec-ttl">Настройка категорий</h6>
<div class="row">
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 20px;"></th>
                    <th scope="col">Расходы  <a class="crd-add" style="color:black;" href="@Url.Action("CategoryForm", "Category", new { id=true})"><span class="glyphicon glyphicon-plus"></span></a></th>
                    <th scope="col" style="width: 60px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model.Categories.Where(c => c.IsSpendingCategory == true))
                {
                    <tr>
                        <td><span class="@cat.Icon"></span></td>
                        <td>@cat.Name</td>
                        <td><span>@Html.ActionLink(" ", "DeleteFromMyCategories", "Manage", new { id = cat.Id }, new { @class = "glyphicon glyphicon-remove del-btn" })</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col" style="width: 20px;"></th>
                    <th scope="col">Доходы <a class="crd-add" style="color:black;" href="@Url.Action("CategoryForm", "Category", new { id=false})"><span class="glyphicon glyphicon-plus"></span></a></th>
                    <th scope="col" style="width: 60px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model.Categories.Where(c => c.IsSpendingCategory == false))
                {
                    <tr>
                        <td><span class="@cat.Icon"></span></td>
                        <td>@cat.Name</td>
                        <td><span>@Html.ActionLink(" ", "DeleteFromMyCategories", "Manage", new { id = cat.Id }, new { @class = "glyphicon glyphicon-remove del-btn" })</span></td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

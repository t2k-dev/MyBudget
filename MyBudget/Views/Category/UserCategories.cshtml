@model MyBudget.ViewModels.UserCategoriesViewModel
@{
    ViewBag.Title = "Мои категории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Мои категории</h2>

<div class="row">
    <div class="col-md-5 offset-md-1">
        <table class="table table-hover cat-tbl">
            <thead>
                <tr>
                    
                    <th scope="col" class="text-danger text-center">Расходы</th>
                    <th scope="col" style="width: 20px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model.Categories.Where(c => c.IsSpendingCategory == true))
                {
                    <tr>
                        
                        <td>@cat.Name</td>
                        <td><span>@Html.ActionLink(" ", "DeleteFromMyCategories", "Category", new { id = cat.Id }, new { @class = "glyphicon glyphicon-trash glyph-btn" })</span></td>
                    </tr>
                }                
            </tbody>
        </table>
        <hr/>
        <div class="cat-add-btn-wr">
            <a class="btn btn-primary new-trans" href="@Url.Action("AddSpendingCategory", "Category")"><span class="glyphicon glyphicon-plus"></span></a>
        </div>        
    </div>
    <div class="col-md-5">
        <table class="table table-hover cat-tbl">
            <thead>
                <tr>
                    
                    <th scope="col" class="text-success text-center">Доходы</th>
                    <th scope="col" style="width: 20px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model.Categories.Where(c => c.IsSpendingCategory == false))
                {
                    <tr>                        
                        <td>@cat.Name</td>
                        <td><span>@Html.ActionLink(" ", "DeleteFromMyCategories", "Category", new { id = cat.Id }, new { @class = "glyphicon glyphicon-trash glyph-btn" })</span></td>
                    </tr>
                }
            </tbody>
        </table>
        <hr/>
        <div class="cat-add-btn-wr">
            <a class="btn btn-primary new-trans" href="@Url.Action("AddIncomeCategory", "Category")"><span class="glyphicon glyphicon-plus"></span></a>
        </div>        

    </div>
</div>
@model MyBudget.ViewModels.CategoryFormViewModel

@{
    ViewBag.Title = "CategoryForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-4 offset-md-4">
    <h2 class="form-title">Новая категория</h2>

    @using (Html.BeginForm("Save", "Category"))
    {
        <div class="form-group">
            <label for="Name">Название</label>
            @Html.TextBoxFor(m => m.Category.Name, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(m => m.Category.IsSpendingCategory, new { @Value = Model.IsSpending })
        @Html.HiddenFor(m => m.Category.Id)
        @Html.HiddenFor(m => m.Category.CreatedBy)

        <button type="submit" class="btn btn-primary">Сохранить</button>
    }
</div>


